<% layout('/layout/boilerplate') %>

<section class="container mt-5">
  <h2 class="text-center text-danger mb-4">❤️ My Favorite Listings</h2>

  <% if (favorites.length === 0) { %>
    <div class="alert alert-info text-center shadow-sm p-4">
      <h5 class="mb-2">You haven’t added any favorites yet!</h5>
      <p class="mb-0">
        <a href="/listings" class="text-danger fw-bold text-decoration-none">
          Browse listings
        </a> and tap ❤️ to save your favorites.
      </p>
    </div>
  <% } else { %>
    <div class="row">
      <% favorites.forEach(listing => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm border-0 rounded-3">
            <img src="<%= listing.image?.url || 'https://via.placeholder.com/400x250' %>" 
                 alt="<%= listing.title %>" 
                 class="card-img-top rounded-top-3" 
                 style="height:250px; object-fit:cover;">
            
            <div class="card-body">
              <h5 class="card-title text-danger"><%= listing.title %></h5>
              <p class="text-muted mb-1"><i class="fa-solid fa-location-dot"></i> 
                <%= listing.location %>, <%= listing.country %>
              </p>
              <p class="fw-bold">₹<%= listing.price.toLocaleString("en-IN") %> / night</p>

              <div class="d-flex justify-content-between align-items-center">
                <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm">
                  View
                </a>

                <form action="/favorites/<%= listing._id %>/remove" method="POST" style="display:inline;">
                  <button class="btn btn-outline-danger btn-sm">
                    <i class="fa-solid fa-heart-crack"></i> Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
