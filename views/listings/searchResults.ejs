<% layout('/layout/boilerplate') %>

<section class="container my-5">
  <h2 class="mb-4">
    Search Results for <span class="text-danger">"<%= query %>"</span>
  </h2>

  <% if (listings.length === 0) { %>
    <div class="text-center py-5">
      <i class="fa-solid fa-magnifying-glass text-muted" style="font-size: 3rem;"></i>
      <h4 class="mt-3 text-muted">No listings found for "<%= query %>".</h4>
      <a href="/listings" class="btn btn-danger mt-3 rounded-pill px-4">
        Explore All Listings
      </a>
    </div>
  <% } else { %>
    <div class="row g-4">
      <% listings.forEach(listing => { %>
        <div class="col-md-4">
          <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
            <img 
              src="<%= listing.image?.url || 'https://via.placeholder.com/400x250' %>"
              class="card-img-top"
              alt="<%= listing.title %>">
            <div class="card-body">
              <h5 class="fw-bold text-danger"><%= listing.title %></h5>
              <p class="text-muted"><%= listing.location %>, <%= listing.country %></p>
              <p class="fw-bold mb-1">â‚¹<%= listing.price.toLocaleString('en-IN') %>/night</p>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-danger w-100 rounded-pill">
                View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
